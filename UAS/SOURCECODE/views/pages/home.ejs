<%- contentFor('title')%>
Brisurs Zoo
<%- contentFor('content')%>
<!--Image Carousel-->
<div id="carousel" class="carousel slide" data-ride="carousel" data-interval="6500">
  <!--Carousel Content--> 
    <div class="carousel-inner">
      <% var isFirst = true;%>
      <%for(var i=0; i<homenav.length; i++){ %>
        <%if (isFirst == true){%>
          <%isFirst = false;%>
          <div class="carousel-item active">
          <%}else{%>
          <div class="carousel-item">
          <%}%>
        <img src="img/carousel/<%=homenav[i].img%>" class="w-100">
          <div class="carousel-caption">
            <div class="container">
             <div class="row justify-content-center">
               <div class="col-8 bg-custom d-none d-md-block py-2 px-auto">
                  <h1><%=homenav[i].title%></h1>
                  <div class="border-top border-primary mx-auto my-1"></div>
                  <h5 class="pb-1"><%=homenav[i].subtitle%></h5>
                  <a href="<%=homenav[i].link%>" class="btn btn-info btn-lg rounded">Read More</a> 
               </div>
              </div>
            </div>
          </div>
         </div>
        <%}%>
      </div>
      
  <!--Prev n next button-->
  <a href="#carousel" class="carousel-control-prev" role="button" data-slide="prev">
    <span class="fas fa-chevron-circle-left fa-3x"></span>
    </a>
    <a href="#carousel" class="carousel-control-next" role="button" data-slide="next">
    <span class="fas fa-chevron-circle-right fa-3x"></span>
    </a>
    <!--Slider bawah-->
    <ol class="carousel-indicators">
      <li data-target="#carousel" data-slide-to="0" class="active"></li>
      <%for(var i=0; i<(homenav.length-1); i++){ %>
        <li data-target="#carousel" data-slide-to="<%=(i+1)%>"></li>
      <%}%>
    </ol>
    <!--End button-->
  </div>

  <!--End Carousel Content-->
  
  </div>
  <!--End Carousel-->
  
  
  <!--Main Page Heading-->
